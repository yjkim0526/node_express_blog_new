<div class="admin-title">
	<h2><%=locals.title%></h2>
	<a href="#" class="button">+새 게시물</a>
</div>

<ul class="admin-posts">
	<% data.forEach(post => { %>
  <li>
    <a href="/posts/<%=post.id%>"><h3><%=post.title%></h3></a>
		<div class="admin-post-controls">
			<a href="/posts/<%=post._id%>/edit" class="btn">수정</a>
      <form action="/posts/<%=post._id%>" method="POST">
        <input type="submit" class="btn-delete btn" value="삭제">
      </form>
		</div>
  </li>
  <% }) %>
</ul>